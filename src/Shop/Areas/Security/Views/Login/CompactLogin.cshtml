@model Shop.Areas.Security.Models.LogOnModel

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Login", new {area = "Security"}, FormMethod.Post, new {@class="navbar-form pull-right"})) {
        <span class="label label-inverse">@User.Identity.Name</span>
        <button id="logout" type="submit" class="btn btn-info btn-small" title="Выход">
            <i class="icon-lock"></i>
        </button>
    }
}
else
{
    using (Html.BeginForm("LogOn", "Login", new {area = "Security"}, FormMethod.Post, new {@class="navbar-form pull-right"})) {
        <input class="span2" name="Username" type="text" placeholder="Имя пользователя/Email" />
        <input class="span2" name="Password" type="password" placeholder="Пароль" />
        <button type="submit" class="btn">Вход</button>
    }
}